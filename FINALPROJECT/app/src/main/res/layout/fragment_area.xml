<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AreaFragment">

    <ImageView
        android:id="@+id/image_square"
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:src="@drawable/square"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        />
    <LinearLayout
        android:id="@+id/Linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/image_square"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        >

        <EditText
            android:id="@+id/height"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/round"
            android:hint="Input Height"
            android:padding="9dp" />

        <EditText
            android:id="@+id/width"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:hint="Input Width"
            android:padding="9dp"
            android:background="@drawable/round"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/TextView_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="50sp"
        android:textColor="@color/pink"
        android:layout_marginTop="40dp"
        android:layout_below="@id/Linear"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/Button_Calculate"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextView_value"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/Putih"
        android:background="@color/Ungu"
        android:text="CALCULATE" />

</RelativeLayout>