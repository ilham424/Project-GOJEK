<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="100dp"
    >

    <ImageView
        android:id="@+id/image_Mountain"
        android:layout_width="342dp"
        android:layout_height="227dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp"
        android:src="@drawable/dontpanik" />

    <TextView
        android:id="@+id/TextView_Lorem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="What is Lorem Ipsum?"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView_penjelasan"
        android:layout_width="267dp"
        android:layout_height="65dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="0dp"
        android:text="Articles are words such as English and a, which combine with a noun to form a noun phrase."
        android:textSize="15sp"
         />

    <Button
        android:id="@+id/Button_Login"
        android:layout_width="189dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Next"
        android:textColor="@color/White"
        android:background="@color/Green"
        />

</LinearLayout>